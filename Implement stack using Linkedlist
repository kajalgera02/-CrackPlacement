struct Node{
    int val;
    Node *next;
    Node(int d){
        val=d;
        next=NULL;
    }
};

class LinkedListStack {
private:
  Node * head;
  int size;

public:
    LinkedListStack() {
     head=NULL;
     size=0;
    }
    
    void push(int x) {
    Node *element=new Node(x);
    element->next=head;
    head=element;
    size++;
    }
    
    int pop() {
    if(head==NULL){
        return-1;
    }
    int value=head->val;
    Node *temp=head;
    head=head->next;
    delete temp;
    size--;
    return value;

    }
    
    int top() {
    if(head==NULL){
        return-1;
    }
    return head->val;
    }
    
    bool isEmpty() {
     return(size==0);
    }
};
